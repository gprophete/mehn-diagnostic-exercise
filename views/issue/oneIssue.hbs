<h1>Single Issue</h1>

<a href="/issue/{{oneIssue._id}}/edit">
    <button>
        Edit
    </button>
</a>

<h3>Description</h3>
<span>{{oneIssue.description}}</span>

<h3>Date</h3>
<span>{{oneIssue.createdAt}}</span>

<h3>Status</h3>
<span>{{oneIssue.status}}</span>

<h3>Priority</h3>
<span>{{oneIssue.priority}}</span>




<form action="/issue/{{oneIssue._id}}?_method=DELETE" method="POST">
    <input type="submit" value="Delete Shop">
</form>